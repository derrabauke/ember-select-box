<SelectBox
  class="example6"
  @value={{@value}}
  @onChange={{@onChange}}
  @onOpen={{this.handleOpen}}
  @onSearch={{@onSearch}}
  ...attributes
  as |sb|
>
  <sb.Trigger>
    {{yield sb.value to="trigger"}}
  </sb.Trigger>

  {{#if sb.isOpen}}
    <sb.Options>
      <sb.Input />

      {{#each sb.options as |value|}}
        <sb.Option @value={{value}}>
          {{yield value to="option"}}
        </sb.Option>
      {{else}}
        <sb.Option @disabled={{true}}>
          {{yield sb.query to="noOptions"}}
        </sb.Option>
      {{/each}}
    </sb.Options>
  {{/if}}
</SelectBox>