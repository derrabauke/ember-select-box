<option
  class="select-box__option"
  selected={{this.isSelected}}
  value={{this.value}}
  ...attributes
  {{this.lifecycleHooks
    @value
    didInstall=this.handleInsertElement
    didUpdateArguments=this.handleUpdatedValue
    willDestroy=this.handleDestroyElement
  }}
>
  {{~yield this.api~}}
</option>